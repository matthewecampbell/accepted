<h1><%= @college.name %></h1>
<div>
<div id="tabs">
  <ul>
    <li><a href="#tabs-1">Basic Information</a></li>
    <li><a href="#tabs-2">Costs</a></li>
    <li><a href="#tabs-3">Admissions Statistics</a></li>
  </ul>
  <div id="tabs-1">
    <div class="panel panel-primary">
      <strong>Total_enrollment:</strong> <%= @college.total_enrollment %></br>
      <strong>Affiliation:</strong> <%= @college.affiliation %></br>
      <strong>City:</strong><%= @college.city %></br>

      <div class="row">
        <div id="all-sites-map">
        </div>
      </div>
      <!-- state? -->
    </div>
  </div>
  <div id="tabs-2">
    <div class="panel panel-primary">
      <strong>Total Cost with In-State Tuition:</strong> <%= @college.total_price_in_state %></br>
      <strong>Total Cost with Out-Of-State Tuition:</strong> <%= @college.total_price_out_of_state %></br>
    </div>
  </div>
  <div id="tabs-3">
    <div class="panel panel-primary">
      <strong>Admissions Information For <%= @college.name %></strong></br>
      <strong>Total Number of Applicants:</strong> <%= @college.total_applicants %></br>
      <strong>Percent of Applicants Admitted:</strong> <%= @college.percent_admitted %>%</br>
      <strong>Percent of Admitted Students that Attend <%= @college.name %></strong>: <%= @college.yield %>%</br>
      <strong>Middle 50% of Students ACT Scores:</strong> <%= @college.act_range %></br>
      <strong>Graduation Rate for 6 Years: </strong><%= @college.six_year_grad_rate %></br>
    </div>
  </div>
  <% unless current_user.favorite_colleges.any?{ |college| college.name == @college.name } %>
  <%= form_tag(controller: "colleges", action: "favorite", method: "post") do %>
    <%= submit_tag "Favorite"%>
<% end %>
<% end %>
</div>

<div class="row well transparent">
  <div class="small-2 large-2 columns">
    <%= imdb_style_rating_for @college, current_user%>
  </div>
  <br>
  <div class="small-2 large-4 columns">
    <% if current_user %>
      In State Price: <%= rating_for_user @college, current_user, "total_price_in_state", stars: 5 %>
      <br>
      Out Of State Price: <%= rating_for_user @college, current_user, "total_price_out_of_state", stars: 5 %>
      <br>
      Act Range: <%= rating_for_user @college, current_user, "act_range", stars: 5 %>
      <br>
      Graduation Rate: <%= rating_for_user @college, current_user, "six_year_grad_rate", stars: 5 %>
      <br>
      Affiliation: <%= rating_for_user @college, current_user, "affiliation", stars: 5 %>
      <br>
      City: <%= rating_for_user @college, current_user, "city", stars: 5 %>
      <br>
      Total Enrollment: <%= rating_for_user @college, current_user, "total_enrollment", stars: 5 %>
    <% end %>
  </div>
</div>
